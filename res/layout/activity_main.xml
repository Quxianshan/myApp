<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button 
        android:id="@+id/start_gsensor_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:text="@string/name_of_start_gsensor_activity"
        />

    <Button 
        android:id="@+id/start_light_sensor_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_gsensor_activity"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:text="@string/name_of_start_light_sensor_activity"
        />
    
    <Button 
        android:id="@+id/start_proximity_sensor_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_light_sensor_activity"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:text="@string/name_of_start_proximity_sensor_activity"
        />
    
</RelativeLayout>
